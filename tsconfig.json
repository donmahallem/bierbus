{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "outDir": "dist",
        "rootDir": "./src/",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "typeAcquisition": {
        "enable": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "baseUrl": "./src/",
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts"
    ]
}